{
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": ["src", "./"],
    "target": "es2016",
    "moduleResolution": "node",
    "declaration": false,
    "module": "es2015",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitThis": true,
    "strict": true
  },
  "include": [
    "src/**/*",
    "node_modules/handlebars/types"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": ["index.ts"]
}
